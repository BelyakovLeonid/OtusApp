<resources>

    <style name="Theme.OtusApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="XXXLargeText" parent="Text">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">42sp</item>
    </style>

    <style name="XXLargeText" parent="Text">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="XLargeText" parent="Text">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="LargeText" parent="Text">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="NormalText" parent="Text">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MediumText" parent="Text">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="FilledButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/salad</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">12dp</item>
        <item name="cornerRadius">100dp</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:statusBarColor">@color/transparent</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_bg</item>
    </style>

    <style name="PickerDialogTheme" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="colorAccent">@color/salad</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/PickerButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/PickerButtonStyle</item>
    </style>

    <style name="PickerButtonStyle" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>