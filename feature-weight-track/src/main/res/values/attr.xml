<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="WeightChartView">
        <attr name="wcv_chart_color" format="color" />
        <attr name="wcv_selected_color" format="color" />
        <attr name="wcv_skeleton_color" format="color" />
        <attr name="wcv_text_color" format="color" />
    </declare-styleable>

    <declare-styleable name="WeightPickerView">
        <attr name="selectedTextColor" format="color" />
        <attr name="notSelectedTextColor" format="color" />
        <attr name="controlsTint" format="color" />
        <attr name="android:textSize" />
        <attr name="controlsSize" format="enum">
            <enum name="small" value="0" />
            <enum name="medium" value="1" />
            <enum name="large" value="2" />
        </attr>
    </declare-styleable>
</resources>