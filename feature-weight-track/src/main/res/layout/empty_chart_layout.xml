<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/emptyChartHint"
        style="@style/NormalText"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="12dp"
        android:text="@string/weight_track_empty_weight_hint"
        android:textAlignment="center"
        android:textColor="@color/gray"
        app:layout_constraintBottom_toTopOf="@id/emptyChartFabAdd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />


    <ImageView
        android:id="@+id/emptyChartFabAdd"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/fab_background"
        android:backgroundTint="@color/light_blue"
        android:clickable="true"
        android:padding="12dp"
        android:src="@drawable/ic_plus"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/emptyChartHint"
        app:layout_constraintStart_toStartOf="@id/emptyChartHint"
        app:layout_constraintTop_toBottomOf="@id/emptyChartHint" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/emptyChartGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="emptyChartHint, emptyChartFabAdd" />
</merge>