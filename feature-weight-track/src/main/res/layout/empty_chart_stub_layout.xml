<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:paddingHorizontal="40dp">

    <TextView
        android:id="@+id/emptyGoalHint"
        style="@style/NormalText"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/weight_track_empty_weight_hint"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintBottom_toTopOf="@id/emptyFabAdd"
        android:textColor="@color/gray" />


    <ImageView
        android:layout_marginTop="20dp"
        android:id="@+id/emptyFabAdd"
        android:layout_width="60dp"
        app:layout_constraintStart_toStartOf="@id/emptyGoalHint"
        app:layout_constraintEnd_toEndOf="@id/emptyGoalHint"
        app:layout_constraintTop_toBottomOf="@id/emptyGoalHint"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="60dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/fab_background"
        android:backgroundTint="@color/light_blue"
        android:clickable="true"
        android:padding="12dp"
        android:src="@drawable/ic_plus" />
</androidx.constraintlayout.widget.ConstraintLayout>